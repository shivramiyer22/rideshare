from langgraph.checkpoint.memory import InMemorySaver

agent = create_agent(
    model="openai:gpt-4o-mini",
    tools=[search_documents],
    checkpointer=InMemorySaver(),
    system_prompt="Use search_documents to answer questions about the document.",
    name="rag_agent"
